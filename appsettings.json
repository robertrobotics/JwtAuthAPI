{
  "JwtBearerTokenSettings": {
    "Secret": "very secret key - can be generated using e.g. ssh-keygen command",
    "Audience": "audience's address, e.g. https://localhost:44123/",
    "Issuer": "issuer's address, e.g. https://localhost:44123/",
    "ExpiryTime": 60 // JWT expiration time in seconds
  },

  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },

  "ConnectionStrings": {
    "SqlConnection": "connection string to database"
  },

  "AllowedHosts": "*"
}
